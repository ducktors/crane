  },
  "dependencies": {
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^16.18.3",
    "@vitest/coverage-istanbul": "^0.27.3",
    "coveralls": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "rimraf": "^4.1.2",
    "rome": "11.0.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4"
  }
}